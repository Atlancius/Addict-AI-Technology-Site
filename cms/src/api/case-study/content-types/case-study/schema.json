{
  "kind": "collectionType",
  "collectionName": "case_studies",
  "info": {
    "singularName": "case-study",
    "pluralName": "case-studies",
    "displayName": "Case Study",
    "description": "Études de cas / réalisations"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "gallery_desktop": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "gallery_mobile": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "tags": {
      "type": "json"
    },
    "service_type": {
      "type": "enumeration",
      "enum": ["marketing-digital", "automatisation-ia", "crm-saas-integrations", "transition-digitale"]
    },
    "client_name": {
      "type": "string"
    },
    "client_type": {
      "type": "string"
    },
    "short_summary": {
      "type": "text"
    },
    "problem": {
      "type": "richtext"
    },
    "solution": {
      "type": "richtext"
    },
    "results": {
      "type": "richtext"
    },
    "tools": {
      "type": "json"
    },
    "external_link": {
      "type": "string"
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "sort_order": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "seo_title": {
      "type": "string"
    },
    "seo_description": {
      "type": "text"
    }
  }
}
